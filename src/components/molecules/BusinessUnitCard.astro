---
import Card from '@/components/atoms/Card.astro';
import Typography from '@/components/atoms/Typography.astro';
import Icon from '@/components/atoms/Icon.astro';
import Button from '@/components/atoms/Button.astro';
import { cn } from '@/utils/cn';

export interface Props {
  unit: {
    id: string;
    name: string;
    displayName: string;
    description: string;
    icon: string;
    color: string;
    href: string;
    features: string[];
  };
  class?: string;
}

const { unit, class: className } = Astro.props;
---

<Card 
  class={cn('p-6 group', className)} 
  hover={true}
>
  <div class="flex items-start gap-4">
    <div class={cn(
      'p-3 rounded-lg transition-colors duration-200',
      `bg-${unit.color}-500/10 text-${unit.color}-500`,
      `group-hover:bg-${unit.color}-500/20`
    )}>
      <Icon name={unit.icon} size="lg" />
    </div>
    
    <div class="flex-1 space-y-3">
      <div>
        <Typography as="h3" variant="h4" class="group-hover:text-primary transition-colors">
          {unit.displayName}
        </Typography>
        <Typography variant="muted" class="mt-1">
          {unit.description}
        </Typography>
      </div>
      
      <ul class="space-y-1">
        {unit.features.slice(0, 3).map(feature => (
          <li class="flex items-center gap-2 text-sm text-muted-foreground">
            <Icon name="chevron-right" size="sm" class="text-primary" />
            {feature}
          </li>
        ))}
      </ul>
      
      <Button 
        variant="outline" 
        size="sm" 
        href={unit.href}
        class="mt-4 group-hover:border-primary group-hover:text-primary"
      >
        Explorar {unit.name}
        <Icon name="external-link" size="sm" class="ml-2" />
      </Button>
    </div>
  </div>
</Card>