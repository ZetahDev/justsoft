---
import Typography from '@/components/atoms/Typography.astro';
import Button from '@/components/atoms/Button.astro';
import { cn } from '@/utils/cn';

export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  class?: string;
}

const {
  title,
  subtitle,
  ctaText = 'Conoce m√°s',
  ctaLink = '/about',
  secondaryCtaText,
  secondaryCtaLink,
  class: className,
} = Astro.props;
---

<section class={cn(
  'relative overflow-hidden py-20 md:py-32',
  className
)}>
  <div class="absolute inset-0 bg-grid-white/[0.02] -z-10"></div>
  <div class="absolute inset-0 flex items-center justify-center -z-10">
    <div class="w-full max-w-lg h-[500px] bg-primary/10 rounded-full blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <div class="max-w-3xl mx-auto text-center space-y-8">
      <div class="space-y-4">
        <Typography as="h1" variant="h1" class="animate-fade-in">
          {title}
        </Typography>
        <Typography as="p" variant="lead" class="animate-fade-in animation-delay-100">
          {subtitle}
        </Typography>
      </div>
      
      <div class="flex flex-wrap items-center justify-center gap-4 animate-fade-in animation-delay-200">
        <Button href={ctaLink} size="lg">
          {ctaText}
        </Button>
        
        {secondaryCtaText && secondaryCtaLink && (
          <Button href={secondaryCtaLink} variant="outline" size="lg">
            {secondaryCtaText}
          </Button>
        )}
      </div>
    </div>
  </div>
</section>